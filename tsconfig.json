{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "tests/fixtures"
  ],
  "compileOnSave": true
}
